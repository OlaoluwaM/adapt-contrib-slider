{
  "$anchor": "slider-course",
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "type": "object",
  "$merge": {
    "source": {
      "$ref": "course"
    },
    "with": {
      "properties": {
        "_globals": {
          "type": "object",
          "default": {},
          "properties": {
            "_slider": {
              "type": "object",
              "default": {},
              "properties": {
                "ariaRegion": {
                  "type": "string",
                  "title": "ARIA region",
                  "default": "Slider. Respond to the question by selecting a value on the scale and then submit.",
                  "_adapt": {
                    "translatable": true
                  }
                },
                "labelStart": {
                  "type": "string",
                  "title": "Scale Label - start ARIA label",
                  "description": "ARIA label for the start of the slider scale",
                  "default": "Start of the scale",
                  "_adapt": {
                    "translatable": true
                  }
                },
                "labelEnd": {
                  "type": "string",
                  "title": "Scale Label - end ARIA label",
                  "description": "ARIA label for the end of the slider scale",
                  "default": "End of the scale",
                  "_adapt": {
                    "translatable": true
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
